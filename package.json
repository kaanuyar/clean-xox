{
  "name": "clean-xox",
  "version": "1.0.0",
  "description": "Tic-tac-toe game server",
  "scripts": {
    "start": "node dist/src/entrypoint/main.js",
    "build": "rimraf dist && tsc -p tsconfig.prod.json",
    "build:dev": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/entrypoint/main.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- -c jest.unit.config.ts",
    "test:integration": "npm test -- -c jest.integration.config.ts",
    "test:ci": "npm test -- --coverage",
    "lint": "eslint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@testcontainers/postgresql": "^11.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.10",
    "@types/swagger-ui-express": "^4.1.7",
    "axios": "^1.11.0",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.21.0"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.1",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
