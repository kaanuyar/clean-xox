{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "module": "NodeNext",
        "target": "ES6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "rootDir": ".",
        "paths": {
            "@/src/*": ["./src/*"],
            "@/tests/*": ["./tests/*"]
        }
    },
    "include": ["src", "tests"]
}